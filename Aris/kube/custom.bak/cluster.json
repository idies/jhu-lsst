{
    "apiVersion": "v1",
    "metadata": {
        "kind": "Cluster",
        "name": "filedb"
    },
    "spec": {
        "clusterServices": {
            "spec": {
                "endpoints": [
                    {
                        "name": "AppServiceProxy",
                        "serviceType": "LoadBalancer",
                        "port": 30778
                    },
                    {
                        "name": "Knox",
                        "serviceType": "LoadBalancer",
                        "port": 30443
                    }
                ]
            },
            "sparkHead": {
                "replicas": 1
            },
            "namenode": {
                "replicas": 1,
                "spec": {}
            },
            "zookeeper": {
                "replicas": 0
            },
            "hadoop": {
                "yarn": {
                    "nodeManager": {
                        "memory": 65536,
                        "vcores": 30
                    },
                    "schedulerMax": {
                        "memory": 655360,
                        "vcores": 300
                    },
                    "capacityScheduler": {
                        "maxAmPercent": 0.3
                    }
                },
                "spark": {
                    "driverMemory": "2g",
                    "driverCores": 1,
                    "executorInstances": 11,
                    "executorMemory": "12g",
                    "executorCores": 10
                }
            }
        },
        "pools": [
            {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Master",
                    "replicas": 1,
                    "hadrEnabled": false,
                    "endpoints": [
                        {
                            "name": "Master",
                            "serviceType": "NodePort",
                            "port": 31433
                        }
                    ]
                }
            },
            {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Compute",
                    "replicas": 1
                }
            },
            {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Data",
                    "replicas": 4
                }
            },
            {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Storage",
                    "replicas": 4
                }
            }
        ]
    }
}